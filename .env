# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# gRPC configuration
GRPC_HOST=0.0.0.0
GRPC_PORT=9090

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=users
DB_USER=postgres
DB_PASSWORD=137980
DB_SSL_MODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Goose migrations
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=host=localhost port=5432 user=postgres password=137980 dbname=users sslmode=disable

# Authentication configuration
AUTH_KEYCLOAK_URL=http://keycloak:8080
AUTH_KEYCLOAK_REALM=master
AUTH_KEYCLOAK_CLIENT_ID=go-microservice-template
AUTH_KEYCLOAK_ISSUER=http://keycloak:8080/realms/master

# JWT configuration (fallback)
AUTH_JWT_SECRET=your-secret-key
AUTH_JWT_EXPIRATION=24h
AUTH_JWT_REFRESH_EXPIRATION=168h

# RabbitMQ configuration
RMQ_URL=amqp://guest:guest@rabbitmq:5672/
RMQ_EXCHANGE=go_microservice_template_exchange
RMQ_QUEUE=go_microservice_template_queue

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Tracing configuration
TRACE_ENABLED=true
TRACE_UPTRACE_DSN=
TRACE_SERVICE_NAME=go-microservice-template
TRACE_ENVIRONMENT=development
